	<queryString>
		<![CDATA[SELECT
    a.id AS achat_id,
    a.numero AS numero,
    a.date_achat AS date_achat,
    f.nom AS fournisseur,
    u.nom AS utilisateur,
    COALESCE(SUM(ad.quantite * ad.prix_unitaire), 0) AS total_facture,
    COALESCE(a.montant_verse, 0) AS montant_regle,
    COALESCE(
        COALESCE(SUM(ad.quantite * ad.prix_unitaire), 0) - COALESCE(a.montant_verse, 0),
        0
    ) AS reste_a_payer
FROM achats a
LEFT JOIN achats_details ad ON ad.achat_id = a.id
LEFT JOIN fournisseurs f ON f.id = a.fournisseur_id
LEFT JOIN utilisateurs u ON u.id = a.utilisateur_id
WHERE
    ($P{date_debut} IS NULL OR a.date_achat >= $P{date_debut})
    AND ($P{date_fin} IS NULL OR a.date_achat <= $P{date_fin})
    AND ($P{fournisseur_id} IS NULL OR a.fournisseur_id = $P{fournisseur_id})

GROUP BY a.id, a.numero, a.date_achat, f.nom, u.nom, a.montant_verse
ORDER BY a.date_achat DESC]]>
	</queryString>
